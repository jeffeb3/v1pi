export DIST_NAME=v1pi
export DIST_VERSION=0.17.1
export BASE_IMAGE_ENLARGEROOT=800

source ./hotspot.sh

if [[ "${HOTSPOT}" == "hotspot" ]]; then
  echo "Enable Hotspot"
  export MODULES="base(raspicam, network, nodejs, disable-services(cncjs), raspap, password-for-sudo)"
else
  echo "Disable Hotspot"
  export MODULES="base(raspicam, network, nodejs, disable-services(cncjs), password-for-sudo)"
fi
